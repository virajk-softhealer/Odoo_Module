<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- FORM VIEW  -->
    <record id="sh_twilio_account_view_form" model="ir.ui.view">
        <field name="name">sh.twilio.account.view.form</field>
        <field name="model">sh.twilio.account</field>
        <field name="arch" type="xml">
            <form string="Twilio Account" create="false">
                <header>
                    <button name="sh_account_test_connection"
                            string="TEST CONNECTION" class="btn-primary"
                            type="object"
                            attrs="{'invisible': [('state','!=','new')]}"/>

                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Name"/>
                        <h1>
                            <div class="d-flex">
                                <field class="text-break" name="name" required="1"/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sh_account_sid" password="True" required="1"/>
                            <field name="sh_auth_token" password="True" required="1"/>
                            <field name="sh_total_allocated_sms"/>
                            <!-- <field name="sh_is_o2m_field"/> -->
                        </group>
                    </group>
                    <notebook>
                        <page name="sms_allocation_lines" string="SMS Allocation">
                                <field 
                                    name="sh_sms_allocation_line"
                                    widget="section_and_note_one2many">

                                        <tree 
                                            string="Twilio Account Lines"
                                            editable="bottom">

                                            <field name="sh_store_id"/>
                                            <field name="sh_allocates_sms" sum="Total"/>
                                        </tree>
                                </field>
                        </page>
                    </notebook>
                </sheet>

                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" />
                </div>
                
            </form>
        </field>
    </record>

    <!-- TREE VIEW  -->
    <record id="sh_twilio_account_view_tree" model="ir.ui.view">
        <field name="name">sh.twilio.account.view.tree</field>
        <field name="model">sh.twilio.account</field>
        <field name="arch" type="xml">
            <tree string="Twilio Account">
                <field name="sh_account_sid" password="True"/>
                <field name="sh_auth_token" password="True"/>
                <field name="sh_total_allocated_sms" sum="Total"/>
            </tree>
        </field>
    </record>

    <!-- ACTION  -->
    <record id="action_sh_twilio_account" model="ir.actions.act_window">
        <field name="name">Twilio Account</field>
        <field name="res_model">sh.twilio.account</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sh_twilio_account_view_form"/>
        <field name="res_id" ref="sh_demo_twilio_account"/>
        <field name="type">ir.actions.act_window</field>
        <field name="target">current</field>
    </record>
</odoo>