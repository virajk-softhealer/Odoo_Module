<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- INHERIT VIEW  -->
    <record id="sh_sms_view_res_config_settings" model="ir.ui.view">
        <field name="name">sh.sms.view.res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="SMS Remainder" string="SMS Remainder" data-key="sh_sms"> 
                    <h2> SMS Remainder</h2>

                    <div class="row mt16 o_settings_container" name="sms_remainder_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="sms_remainder_setting">
                            <div class="o_setting_left_pane">
                                <field name="sh_auto_birth_remainder"/>
                            </div>

                            <div class="o_setting_right_pane">
                                <label for="sh_auto_birth_remainder"/>
                                <a href="https://www.odoo.com/documentation/16.0/applications/inventory_and_mrp/inventory/barcode/setup/software.html" title="Documentation" class="me-2 o_doc_link" target="_blank"></a>
                                <div class="content-group" attrs="{'invisible': [('sh_auto_birth_remainder','=',False)]}">
                                    <div class="mt16">
                                        <label for="sh_birthday_sms_temp_id" class="o_light_label mr8"/>
                                        <field name="sh_birthday_sms_temp_id" class="oe_inline" 
                                            attrs="{'required':[('sh_auto_birth_remainder','=',True)]}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box" id="sms_remainder_setting">
                            <div class="o_setting_left_pane">
                                <field name="sh_auto_visit_remainder"/>
                            </div>   

                            <div class="o_setting_right_pane">
                                <label for="sh_auto_visit_remainder"/>
                                <a href="https://www.odoo.com/documentation/16.0/applications/inventory_and_mrp/inventory/barcode/setup/software.html" title="Documentation" class="me-2 o_doc_link" target="_blank"></a>
                                <div class="content-group" attrs="{'invisible': [('sh_auto_visit_remainder','=',False)]}">
                                    <div class="mt16">
                                        <label for="sh_store_visit_sms_temp_id" class="o_light_label mr8"/>
                                        <field name="sh_store_visit_sms_temp_id" class="oe_inline"
                                            attrs="{'required':[('sh_auto_visit_remainder','=',True)]}"/>
                                    </div>
                                    <br/>
                                    <div class="content-group">
                                        <label for="sh_sms_day" class="o_light_label mr8"/>
                                        <field name="sh_sms_day" class="oe_inline"/>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </xpath>
        </field>
    </record>

    <!-- ACTION      -->
    <record id="sh_sms_res_config_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'sh_sms', 'bin_size': False}</field>
    </record>
</odoo>