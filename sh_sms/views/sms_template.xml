<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!--SMS.TEMPLATE FORM VIEW INHERIT  -->
    <record id="sms_template_view_form_inherit" model="ir.ui.view">
        <field name="name">sms.template.view.form.inherit</field>
        <field name="model">sms.template</field>
        <field name="inherit_id" ref="sms.sms_template_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form//div[1]/button[@name='action_create_sidebar_action']" position="attributes">
                <attribute name="invisible">context.get('create_sidebar_btn')</attribute>
            </xpath>
        </field>
    </record>

    <!--SMS.TEMPLATE CUSTOME ACTION  -->
    <record id="sh_sms_template_action" model="ir.actions.act_window">
        <field name="name">Templates</field>
        <field name="res_model">sms.template</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'create_sidebar_btn':True}</field>
        <field name="type">ir.actions.act_window</field>
    </record>

</odoo>