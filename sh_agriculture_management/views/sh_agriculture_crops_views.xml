<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--=======Form View=========-->

    <record id='sh_agriculture_crops_form_view' model='ir.ui.view'>
        <field name="name">sh.agriculture.crops.form</field>
        <field name="model">sh.agriculture.crops</field>
        <field name="arch" type="xml">
            <form>
                <div class="alert alert-info text-center o_form_header"
                style="background: #C7F6C7;color: green;border:1px solid #C7F6C7;"
                role="alert">
                <div>
                    <h3 style="color :#020302;">
                        <field name="sh_crop_info_message" readonly="1" force_save="1" />
                    </h3>   
                </div>
                </div>
                <sheet>
                    <div name="button_box" position="inside">
                        <button class="oe_stat_button"
                            name="action_crops_quants"
                            icon="fa-cubes"
                            type="object">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="qty_available" widget="statinfo" nolabel="1"
                                        class="mr4" />
                                </span>
                                <span class="o_stat_text">On Hand</span>
                            </div>
                        </button>
                    </div>
                    <field name="sh_crops_img" widget="image" class="oe_avatar" />
                    <div>
                        <attribute name="name">
                            <b>Crop Name</b>
                        </attribute>
                        <h1>
                            <field name="product_id"
                                domain="[('is_agri','=',True), ('agri_crop','=',True)]"
                                context="{'default_is_agri': True,'default_agri_crop': True,'default_detailed_type': 'product'}" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <label for="sh_crops_duration" string="Period To Produce Crop" />
                            <div class="o_row" name="sh_crops_duration">
                                <field name="sh_crops_duration" class="oe_inline" />
                                <field name="sh_crop_duration_day" />
                            </div>
                            <field name="sh_crop_season" />
                            <field name="sh_duration_total_days" invisible="1" />

                        </group>
                        <group>
                            <field 
                                name="sh_crops_warehouse_id" 
                                options="{'no_open':True,'no_create':True}" />
                            <field name="sh_crops_stock_location_id" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Crops's Raw Material">
                            <field name="sh_crop_raw_material_ids">
                                <tree editable="bottom">
                                    <field name="product_id"
                                        domain="[('is_agri','=',True), ('crop_raw_material','=',True)]"
                                        context="{'default_is_agri': True,'default_crop_raw_material': True}" />
                                    <field name="description" />
                                    <field name="quantity" />
                                    <field name="product_uom_id" />
                                    <!-- <field name="product_uom_category_id"/> -->
                                </tree>
                            </field>
                        </page>
                        <!-- <page string="Crops's Labours">
                            <field name="sh_crop_labours_ids">
                                <tree editable="bottom">
                                    <field name="product_id"
                                        domain="[('is_agri', '=', True), ('crop_labour', '=', True)]"
                                        context="{ 'default_is_agri': True,'default_crop_labour': True}" />
                                    <field name="description" />
                                    <field name="quantity" />
                                    <field name="product_uom_category_id" />
                                </tree>
                            </field>
                        </page> -->
                        <!-- <page string="Crops's Overhead">
                            <field name="sh_crop_overhead_ids">
                                <tree editable="bottom">
                                    <field name="product_id"
                                        domain="[('is_agri', '=', True), ('crop_overhead', '=', True)]"
                                        context="{ 'default_is_agri': True,'default_crop_overhead': True}" />
                                    <field name="description" />
                                    <field name="quantity" />
                                    <field name="product_uom_category_id" />
                                </tree>
                            </field>
                        </page> -->
                        <page string="Crops's Disease">
                            <field name="sh_diseaescrops_ids">
                                <tree editable="bottom">
                                    <field name="sh_disease_id" class="w-25" />
                                    <field name="details" class="w-75" />
                                </tree>
                            </field>
                        </page>
                        <page string="List Of Processes">
                            <field name="sh_list_process_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle" />
                                    <field name="sh_task_id"
                                        domain="[('is_agri_task', '=', True)]"
                                        context="{'default_is_agri_task': True}" />
                                    <field name='sh_duration' />
                                    <field name='sh_duration_day' nolabel="1" />
                                </tree>
                            </field>
                        </page>

                        <page string="Crops's Description">
                            <group>
                                <field name="sh_crops_description" />
                            </group>
                        </page>

                        <!-- <page string="Preferred Soil">
                            <field name="sh_soil_ids">
                                <tree editable="bottom">
                                    <field name="name" />
                                    <field name='soil_description' />
                                </tree>
                            </field>
                        </page> -->

                        <page string="Preferred Soil">
                            <label for="sh_soil_id"/>
                            <field name="sh_soil_id"/>
                               
                        </page>
                        <page string="preferred crop conditions">
                            <field name="sh_crop_condition_ids">
                                <tree editable="bottom">
                                    <field name="name" />
                                    <field name="qty" />
                                    <field name='uom_id' />
                                </tree>
                            </field>
                        </page>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="sh_agriculture_crops_tree_view" model="ir.ui.view">
        <field name="name">sh.agriculture.crops.tree</field>
        <field name="model">sh.agriculture.crops</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id" />
                <field name="sh_crops_duration" />
                <field name="sh_crop_duration_day" string=" " />
                <field name="sh_crops_warehouse_id" />
                <field name="sh_crops_stock_location_id" />
                <field name="sh_crops_description" />
            </tree>
        </field>
    </record>

    <record id="sh_agriculture_crops_action" model="ir.actions.act_window">
        <field name="name">Agriculture Crops</field>
        <field name="res_model">sh.agriculture.crops</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click here to create new vehicles detail.
            </p>
        </field>
    </record>
</odoo>