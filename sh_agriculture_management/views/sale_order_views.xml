<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='agricuture_inherit_form_view_sale_order' model='ir.ui.view'>
        <field name="name">sale.order.inherit.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_quotation_send']" position="after">
                <button
                    name="sh_crop_request_wizard_action"
                    string="CREATE CROP REQUEST" type="object"
                    class="btn-primary"
                    attrs="{'invisible': ['|', ('state', 'not in', ['draft']),('hide_crop_btn', '=', False)]}" />
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
               <field name="hide_crop_btn" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>