<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='sh_product_template_inherit_form_view' model='ir.ui.view'>
        <field name="name">sh.product.template.inherit.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="after">
                <style>
                    div[name="agri_option"] .o_field_boolean > div {
                    margin-left: 0px;
                    margin-right: 0px;
                    }
                </style>
                <div name="agri_option">
                    <span class="d-inline-block">
                        <field name="is_agri" />
                        <label for="is_agri" />
                    </span>
                </div>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Agriculture"
                    attrs="{'invisible': [('is_agri', '=', False)]}">
                    <group>
                        <field name="agri_crop" />
                        <field name="crop_raw_material" />
                        <!-- <field name="crop_labour" />
                        <field name="crop_overhead" /> -->
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="sh_agri_product_action" model="ir.actions.act_window">
        <field name="name">Agriculture Product</field>
        <field name="res_model">product.template</field>
        <field name="domain">[('is_agri', '=', True)]</field>
        <field name="context">{'default_is_agri': True, 'default_agri_crop' : True, 'default_detailed_type' : 'product'}</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>


</odoo>