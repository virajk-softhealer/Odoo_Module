                    <div class="row mt-4">
                        <div class="col-12">
                            <h3 class="fw-bold">Crop's Disease</h3>
                        </div>
                    </div>
                    <table class="table table-sm o_main_table  mt-4 border border-1">
                        <thead>
                            <tr class="border border-1">
                                <th class="text-start">Crop's Disease Cure</th>
                                <th class="text-start">Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.sh_diseaescrops_ids" t-as="crop_diseaes">

                                <tr class="border border-top-0 border-1">
                                    <td>
                                        <span t-field="crop_diseaes.sh_disease_id" />
                                    </td>
                                    <td>
                                        <span t-field="crop_diseaes.details" />
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>


                    <div class="row mt-4">
                        <div class="col-12">
                            <h3 class="fw-bold">List of Processes</h3>
                        </div>
                    </div>
                    <table class="table table-sm o_main_table  mt-4 border border-1">
                        <thead>
                            <tr class="border border-1">
                                <th class="text-start">Process</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.sh_list_process_ids" t-as="list_process">

                                <tr class="border border-top-0 border-1">
                                    <td>
                                        <span
                                            t-field="list_process.sh_task_id.sudo().name" />
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <div class="row mt-4">
                        <div class="col-12">
                            <h3 class="fw-bold">Crop's Description</h3>
                        </div>
                    </div>
                    <div class="row border border-1">
                        <div class="col-12 p-2 border-end">
