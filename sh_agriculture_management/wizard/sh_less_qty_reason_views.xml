<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <!-- ========= Form View ============== -->


    <record id='sh_less_qty_reason_wizard_form_view' model='ir.ui.view'>
        <field name="name">sh.less.qty.reason.wizard.form</field>
        <field name="model">sh.less.qty.reason.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Crop Request">
                <group>
                    <field name="sh_disease_incident" widget="radio" />
                </group>
                <!-- <label for="sh_actual_qty" string="Actual Quantity" />
                <div class="o_row" name="sh_estimated_quantity">
                    <field name="sh_actual_qty" class="oe_inline" />
                    <field name="uom_id" class="oe_inline"/>
                </div> -->
                <group>
                    <group>
                        <field name="sh_disease_crops_id" string="Disease Crops"
                            attrs="{'invisible': [('sh_disease_incident', '=', 'incident_crops')],
                        'required': [('sh_disease_incident', 'in', ['disease_crops','both'])]}" />
                        <field name="sh_incident_crops_id" string="Incident Crops"
                            attrs="{'invisible': [('sh_disease_incident', '=', 'disease_crops')],
                        'required': [('sh_disease_incident', 'in', [('incident_crops'),('both')])]}" />
                    </group>
                    <group>
                        <label for="disease_loss_crop" string="Disease Loss Quantity"
                            attrs="{'invisible': [('sh_disease_incident', '=', 'incident_crops')]}" />
                        <div class="o_row" name="disease_loss_crop_div"
                            attrs="{'invisible': [('sh_disease_incident', '=', 'incident_crops')]}">
                            <field name="disease_loss_crop"
                                attrs="{'invisible': [('sh_disease_incident', '=', 'incident_crops')],'required': [('sh_disease_incident', 'in', [('disease_crops'),('both')])]}"
                                class="oe_inline" />
                            <field name="loss_uom_id"
                                attrs="{'invisible': [('sh_disease_incident', '=', 'incident_crops')],'required': [('sh_disease_incident', 'in', [('disease_crops'),('both')])]}" />
                        </div>

                        <label for="incident_loss_crop" string="Incident Loss Quantity"
                            attrs="{'invisible': [('sh_disease_incident', '=', 'disease_crops')]}"
                            class="oe_inline" />
                        <div class="o_row" name="incident_loss_crop_div">
                            <field name="incident_loss_crop"
                                attrs="{'invisible': [('sh_disease_incident', '=', 'disease_crops')],'required': [('sh_disease_incident', 'in', [('incident_crops'),('both')])]}"
                                class="oe_inline" />
                            <field name="loss_uom_id"
                                attrs="{'invisible': [('sh_disease_incident', '=', 'disease_crops')],'required': [('sh_disease_incident', 'in', [('incident_crops'),('both')])]}" />
                        </div>

                    </group>

                </group>
                <notebook>
                    <page string="Description">
                        <field name="sh_description" />
                    </page>
                </notebook>
                <footer>
                    <button name="less_qty_reason" string="Submit" type="object"
                        default_focus="1"
                        class="oe_highlight" />
                    <button string="Cancel" class="btn btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <!-- ========= Action ============== -->
    <record id="sh_less_qty_reason_wizard_action" model="ir.actions.act_window">
        <field name="name">Create Crop Request</field>
        <field name="res_model">sh.less.qty.reason.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


</odoo>