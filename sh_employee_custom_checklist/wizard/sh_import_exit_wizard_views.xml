<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_import_employee_custom_exit_wizard" model="ir.ui.view">
        <field name="name">import.exit.custom.cl.wizard</field>
        <field name="model">import.exit.custom.cl.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Employee Exit Checklist">
                <group>
                    <group>
                        <field name="import_type" widget="radio" />
                        <field name="company_id" groups="base.group_multi_company" />
                        <field name="file" />
                    </group>
                </group>
                <footer>
                    <button name="import_employee_exit_apply" string="Apply" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                    <div style="float: right;">
                        <strong>Download Sample:</strong>
                        <a role="button" href="/sh_employee_custom_checklist/static/download/import_exit_cl_csv.csv" class="btn-primary" style="margin: 0 10px; font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                            <i class="fa fa-download" /> CSV file
                        </a>
                        <a role="button" href="/sh_employee_custom_checklist/static/download/import_exit_cl_excel.xls" class="btn-primary" style="font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                            <i class="fa fa-download" /> Excel file
                        </a>
                    </div>
                </footer>
            </form>
        </field>
    </record>

    <record id="sh_import_exit_custom_cl_action" model="ir.actions.act_window">
        <field name="name">Import Employee Exit Checklist</field>
        <field name="res_model">import.exit.custom.cl.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sh_import_employee_custom_exit_wizard" />
        <field name="target">new</field>
    </record>
</odoo>
