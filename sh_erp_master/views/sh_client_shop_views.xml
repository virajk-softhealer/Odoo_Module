    <!-- FORM VIEW -->
    <record id="sh_client_shop_view_form" model="ir.ui.view">
        <field name="name">sh_client_shop.view.form</field>
        <field name="model">sh.client.shop</field>
        <field name="arch" type="xml">
            <form string="Client Shop">
                <sheet>
                    <h1>
                        <field name="name" default_focus="1" placeholder="Name" required="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="access_token" />
                        </group>
                        <group>
                        </group>
                    </group>
                    <h2 class="py-2 my-2">Log</h2>
                    <field name="log_line" readonly="1" >
                        <tree>
                            <field name="shop_id" />
                            <field name="name" />
                        </tree>
                    </field>
                </sheet>

                <!-- CHATTER -->
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div> -->

            </form>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="sh_client_shop_view_tree" model="ir.ui.view">
        <field name="name">sh_client_shop.view.tree</field>
        <field name="model">sh.client.shop</field>
        <field name="arch" type="xml">
            <tree string="Client Shop">
                <field name="name" />
                <field name="access_token" />
            </tree>
        </field>
    </record>

    <!-- ACTION -->
    <record id="sh_client_shop_action" model="ir.actions.act_window">
        <field name="name">Client Shop</field>
        <field name="res_model">sh.client.shop</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- MENU - CLIENT SHOP -->
    <menuitem
        id="sh_client_shop_menu"
        name="Client Shop"
        action="sh_client_shop_action"
        sequence="1"/>

    <!-- MENU - DASHBOARD -->
    <menuitem id="sh_erp_master_dashboard_menu" 
        name="Dashboard" 
        parent="sh_client_shop_menu" 
        sequence="1" 
        action="sh_erp_master.sh_action_erp_master_dashboard_custom" 
     />
</odoo>