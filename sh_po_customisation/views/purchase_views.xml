<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="purchase_order_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <!-- O2M Line Under Field Add  -->
            <xpath expr="/form/sheet/notebook/page[@name='products']/field[@name='order_line']/tree/field[@name='product_qty']" position="after">
                <field name="sh_sale_price" digits="[12,3]"/>
                <field name="sh_available_quantity" readonly="1"/>
                <field name="sh_barcode" readonly="1"/>
            </xpath>

            <!-- Button Add  -->
            <!-- <xpath expr="//button[@name='button_cancel']" position="after">
                <button name="sh_purchase_order_done" states="draft,sent" string="PO Confirm " type="object" />
            </xpath> -->
            
        </field>
    </record>
</odoo>