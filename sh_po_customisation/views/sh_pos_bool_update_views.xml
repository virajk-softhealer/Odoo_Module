<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_pos_bool_update_form" model="ir.ui.view">
        <field name="name">sh.pos.bool.update.form</field>
        <field name="model">sh.pos.bool.update</field>
        <field name="arch" type="xml">
            <form string="Update Available in POS">
                <sheet>
                    <group>
                        <field name="sh_pos_bool"/>    
                    </group>
                </sheet>
                <footer>
                    <button name="update_pos_bool" string="Update" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
