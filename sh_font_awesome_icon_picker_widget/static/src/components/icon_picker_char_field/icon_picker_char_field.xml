<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="sh_font_awesome_icon_picker_widget.IconPickerCharField" owl="1">
        <t t-if="props.readonly">
            <span t-esc="formattedValue" />
            <i class="fa" t-att-class="formattedValue" title="Counter Icon" />
        </t>
        <t t-else="">
            <div class="d-block">
                <input class="o_input"
                    t-att-id="props.id"
                    type="text"
                    t-att-placeholder="props.placeholder"
                    t-att-hidden="props.hidden"
                    t-ref="input" />
                <button class="btn btn-secondary" type="button"
                    t-on-click="onClickOpenIconPicker">
                    <i class="fa" t-att-class="formattedValue" title="Counter Icon Picker" />
                </button>
            </div>
        </t>
    </t>

</templates>